<%= govuk_row do %>
  <%= govuk_two_thirds do %>
    <%= form_with(model: team) do |f| %>
      <%= f.govuk_error_summary %>
      <h1 class="govuk-heading-l">
        <% if editing %>
          Edit <%= team.name %>
        <% else %>
          Create a new team
        <% end %>
      </h1>

      <% unless editing %>
        <p>You can:</p>
        <ul class="govuk-list govuk-list--bullet">
          <li>only be part of one team</li>
          <li>invite others to your team</li>
          <li>transfer ownership of your design histories to a team</li>
        </ul>
      <% end %>

      <%= f.govuk_text_field :name,
        label: {
          class: 'govuk-label govuk-label--s'
        } %>

      <%= f.govuk_submit editing ? "Save changes" : "Create team" %>
    <% end %>
  <% end %>
<% end %>
