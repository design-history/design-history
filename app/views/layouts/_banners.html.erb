<% if notice %>
  <%= govuk_row do %>
    <%= govuk_two_thirds do %>
      <%= govuk_notification_banner(title_text: "Success",
                                    success: true) do |nb| %>
        <% if notice.is_a?(String) %>
          <% nb.heading(text: notice) %>
        <% else %>
          <% nb.heading(text: notice["title"]) %>
          <%= notice["body"].html_safe %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<% if alert %>
  <%= govuk_row do %>
    <%= govuk_two_thirds do %>
      <%= govuk_notification_banner(title_text: "Important") do |nb| %>
        <% nb.heading(text: alert) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
