<% content_for :breadcrumbs do %>
  <%= govuk_breadcrumbs(breadcrumbs: {
    "Your design histories" => projects_path,
    @project.title => nil
  }) %>
<% end %>

<h1 class="govuk-heading-xl govuk-!-margin-bottom-3"><%= @project.title %></h1>
<p class="govuk-!-margin-bottom-6">
  <%= govuk_link_to design_history_link(@project), design_history_link(@project) %>
  â€“
  <%= govuk_link_to "Change details", edit_project_path(@project) %>
</p>

<%= govuk_button_link_to "New post", new_project_post_path(@project),
  class: 'app-button' %>

<%= govuk_row do %>
  <%= govuk_two_thirds do %>
    <ol class="govuk-list app-posts">
      <% @posts.each do |post| %>
        <li class="app-posts__item">
          <h2 class="govuk-heading-m">
            <% unless post.published? %>
              <%= govuk_tag(text: 'Draft', colour: 'grey') %>
            <% end %>
            <%= govuk_link_to edit_project_post_path(@project, post) do %>
              <%= post.title %>
            <% end %>
          </h2>
          <p class="app-posts__date govuk-!-font-size-16">
            <time
              datetime="<%= post.updated_at.iso8601 %>">
              <%= post.published_at.strftime("%d %B %Y") %></time>
          </p>
        </li>
      <% end %>
    </ol>
  <% end %>
<% end %>
