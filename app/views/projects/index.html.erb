<%= govuk_row do %>
  <%= govuk_two_thirds do %>
    <% if @projects.empty? %>
      <h2 class="govuk-heading-l">Create your first design history</h2>
      <p>Create a design history to start drafting posts.</p>
    <% else %>
      <h2 class="govuk-heading-l">Published design histories</h2>
    <% end %>

    <% @projects.each do |project| %>
      <h3 class="govuk-heading-m govuk-!-margin-bottom-1">
        <%= govuk_link_to project.title, project_path(project) %>
      </h3>
      <p><%= project.description %></p>
    <% end %>

    <% if @projects.empty? %>
      <p>
        <%= govuk_start_button text: "Create a design history", href: new_project_path %>
      </p>
    <% else %>
      <p>
        <%= govuk_link_to "Create a new design history", new_project_path %>
      </p>
    <% end %>
  <% end %>
<% end %>
