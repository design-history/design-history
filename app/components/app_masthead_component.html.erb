<div class="app-masthead<%= @classes&.prepend(' ') %>">
  <div class="govuk-width-container">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds-from-desktop">
        <% if @title %>
          <h1 class="app-masthead__title<%= @title.classes&.prepend(' ') %>">
            <%= @title.html || @title.text %>
          </h1>
        <% end %>
        <% if @description %>
          <div class="app-masthead__description<%= @description.classes&.prepend(' ') %>">
            <%= @description.html || @description.text %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
